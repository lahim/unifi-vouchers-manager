
<div class="container">
<%= form_for @setting do |f| %>
	<% if @setting.errors.any? %>
		<div class="error-explanation">
			<h2>
				<%= pluralize(@setting.errors.count, "error")%>
				prohibited this setting from begin saved:
			</h2>
			<ul>
				<% @setting.errors.full_messages.each do |error| %>
				<li>
					<%= error %>
				</li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
    	<label for="admin_id"><%= f.label :admin_id %></label>
    	<%= f.text_field :admin_id, :class => 'form-control' %>
	</div>

	<div class="form-group">
    	<label for="site_id"><%= f.label :site_id %></label>
    	<%= f.text_field :site_id, :class => 'form-control' %>
	</div>

	<%= link_to "Cancel", settings_path, :class => 'btn btn-danger' %>
	<%= f.submit :class => 'btn btn-success' %>
<% end %>
</div>

<div class="container">
<%= form_for @voucher do |f| %>
	<% if @voucher.errors.any? %>
		<div class="error-explanation">
			<h2>
				<%= pluralize(@voucher.errors.count, "error")%>
				prohibited this voucher from begin saved:
			</h2>
			<ul>
				<% @voucher.errors.full_messages.each do |error| %>
				<li>
					<%= error %>
				</li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
    	<label for="code"><%= f.label :code %></label>
    	<%= f.text_field :code, :class => 'form-control' %>
	</div>

	<%= f.fields_for :info do |i| %>
		<div class="form-group">
	    	<label for="start_date"><%= i.label :start_date %></label>
	    	<%= i.text_field :start_date, :type => 'date', :class => 'form-control' %>
		</div>

		<div class="form-group">
	    	<label for="end_date"><%= i.label :end_date %></label>
	    	<%= i.text_field :end_date, :type => 'date', :class => 'form-control' %>
		</div>
	<% end %>

	<div class="form-group">
    	<label for="duration"><%= f.label :duration %>&nbsp;(in days)</label>
    	<span class="label label-primary"><%= @voucher.duration %></span>
	</div>

	<div class="form-group">
    	<label for="note"><%= f.label :note %></label>
    	<%= f.text_field :note, :class => 'form-control' %>
	</div>

	<div class="form-group">
    	<label for="used"><%= f.label :used %></label>
    	<%= f.check_box :used %>
	</div>

	<div class="form-group">
    	<label for="admin_id"><%= f.label :admin_id %></label>
		<span class="label label-primary"><%= @voucher.admin_id %></span>
	</div>

	<div class="form-group">
    	<label for="site_id"><%= f.label :site_id %></label>
    	<span class="label label-primary"><%= @voucher.site_id %></span>
	</div>

	<%= link_to "Cancel", vouchers_path, :class => 'btn btn-danger' %>
	<%= f.submit :class => 'btn btn-success' %>
<% end %>
</div>